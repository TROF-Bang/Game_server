<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<BorderPane prefHeight="300" prefWidth="500" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io_chating.ClientController">
	<center>
		<TextArea fx:id="txtDisplay" />
	</center>
	<bottom>
		<BorderPane>
			<left>
				<Button fx:id="btnConn" prefHeight="30" prefWidth="60" text="start" />
			</left>
			<center>
				<TextField fx:id="txtInput" prefHeight="30" prefWidth="60" />
			</center>
			<right>
				<Button fx:id="btnSend" prefHeight="30" prefWidth="60" text="send" />
			</right>
		</BorderPane>
	</bottom>
   <right>
      <VBox alignment="CENTER" prefHeight="270.0" prefWidth="59.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#creatRoom" text="방 생성" />
            <Button mnemonicParsing="false" onAction="#choiceRoom" text="방 선택" />
         </children>
      </VBox>
   </right>
	
</BorderPane>
